{
  "name": "url-shortener-api",
  "version": "1.28.0",
  "scripts": {
    "dev": "bun run --watch src/infra/index.ts",
    "db:generate": "bun --env-file .env --bun drizzle-kit generate",
    "db:migrate": "bun --env-file .env drizzle-kit migrate",
    "db:studio": "bun --env-file .env drizzle-kit studio",
    "docker:up": "docker compose --env-file .env up -d",
    "docker:down": "docker compose down",
    "docker:stop": "docker compose stop",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:build": "docker build -t url-shortener-api:latest -t url-shortener-api:$(git rev-parse --short HEAD) .",
    "docker:build:prod": "docker build --target production -t url-shortener-api:latest -t url-shortener-api:$(git rev-parse --short HEAD) .",
    "docker:run": "docker run --env-file .env -p 3333:3333 url-shortener-api:latest",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "check:type": "bunx tsc --noEmit --skipLibCheck",
    "test:unit": "bun test ./src/core ./src/domain",
    "test:unit:watch": "bun test ./src/core ./src/domain --watch",
    "test:e2e": "bun test --preload ./src/infra/setup-e2e.ts  ./src/infra/http/controllers/**/*.e2e.spec.ts",
    "verify": "bash scripts/verify.sh"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/eden": "^1.4.6",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/openapi": "^1.4.11",
    "base62": "^2.0.2",
    "better-auth": "^1.3.26",
    "drizzle-orm": "^0.44.6",
    "elysia": "^1.4.22",
    "hashids": "^2.3.0",
    "pg": "^8.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@faker-js/faker": "^10.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.5",
    "bun-types": "latest",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5",
    "jsonwebtoken": "^9.0.3"
  },
  "module": "src/index.js"
}
